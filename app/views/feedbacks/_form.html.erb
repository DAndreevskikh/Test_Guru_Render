<%= form_with model: @feedback, scope: :feedback, url: feedbacks_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name, "Ваше имя:" %>
    <%= form.text_field :name, class: 'form-control' %>
    <div class="invalid-feedback"></div>
  </div>

  <% if user_signed_in? %>
    <%= form.hidden_field :email, value: current_user.email %>
    <div class="form-group">
      <%= form.label :email, "Ваш email:" %>
      <input type="text" value="<%= current_user.email %>" class="form-control" disabled>
    </div>
  <% else %>
    <div class="form-group">
      <%= form.label :email, "Ваш email:" %>
      <%= form.email_field :email, class: 'form-control' %>
      <div class="invalid-feedback"></div>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :message, "Сообщение:" %>
    <%= form.text_area :message, class: 'form-control' %>
    <div class="invalid-feedback"></div>
  </div>
  <%= form.submit "Отправить", class: 'btn btn-primary' %>
<% end %>
