<div class="modal" tabindex="-1" role="dialog" id="feedbackModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Обратная связь</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with model: @feedback, local: true do |form| %>
          <div class="form-group">
            <%= form.label :name, "Ваше имя:" %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :email, "Ваш email:" %>
            <%= form.email_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :message, "Сообщение:" %>
            <%= form.text_area :message, class: 'form-control' %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <%= form.submit "Отправить", class: 'btn btn-primary' %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
      </div>
    </div>
  </div>
</div>
