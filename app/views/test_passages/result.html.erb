<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 text-center">
      <h1 class="mb-4"><%= t('.header', title: @test_passage.test.title) %></h1>
      <p class="mb-3"><%= t('.your_result') %> <span class="<%= @test_passage.success? ? 'text-success' : 'text-danger' %>"><%= @test_passage.success_rate %>%</span></p>

      <% if @test_passage.success? %>
        <div class="alert alert-success mt-4" role="alert">
          <%= t('test_passages.result.success') %>
        </div>

        <% if @awarded_badge %>
          <div class="badge-notification">
            <div class="alert alert-info mt-4" role="alert">
              <h4 class="alert-heading">Поздравляем! Вы получили награду!</h4>
              <div class="badge-container mt-3">
                <p class="badge-image-container"><%= image_tag @awarded_badge.display_image, class: 'badge-image' %></p>
                <div class="mt-3">
                  <%= link_to 'Мои награды', user_badges_path, class: "btn btn-primary" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

      <% else %>
        <div class="alert alert-danger mt-4" role="alert">
          <%= t('test_passages.result.fail') %>
        </div>
      <% end %>

      <div class="mt-3 d-flex justify-content-center">
        <%= link_to t('test_passages.result.all_tests'), tests_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
