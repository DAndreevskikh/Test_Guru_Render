<tr class="align-middle">
  <td>
    <%= link_to admin_test_path(test) do %>
      <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <% end %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td><%= test.level %></td>
  <td><%= test.category.name %></td>
  <td><%= test.author.name %></td>
  <td><%= test.questions.count %></td>
  <td><%= test.timer.positive? ? test.timer : t('.unlimited') %></td>
  <td>
    <%= link_to t('show'), admin_test_path(test) %> |
    <%= link_to t('edit'), 
                edit_admin_test_path(test),
                data: { test_id: test.id, 
                        edit_text: t('edit'), 
                        cancel_text: t('back') },
                class: 'form-inline-link' %> |
    <%= link_to t('delete'), admin_test_path(test), method: :delete, data: { confirm: t('confirmations.are_you_sure') } %> 
  </td>
</tr>
