<div class="container mt-3">
  <h1 class="text-center mb-4"><%= t('.header') %></h1>

  <%= render 'shared/errors', resource: @test %>

  <div class="table-responsive">
    <table class="table table-hover table-centered">
      <thead class="thead-light">
        <tr>
          <th class="sort-by-title pointer">
            <%= t('.title') %> 
            <%= octicon('arrow-up', class: 'text-success hide') %> 
            <%= octicon('arrow-down', class: 'text-success hide') %>
          </th>
          <th><%= t('.level') %></th>
          <th><%= t('.category') %></th>
          <th><%= t('.author') %></th>
          <th><%= t('.questions_count') %></th>
          <th><%= t('.timer') %></th>
          <th colspan="4"><%= t('.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @tests %>
      </tbody>
    </table>
  </div>
</div>

<div class="container text-center mt-3">
  <%= link_to t('.new_test'), new_admin_test_path, class: "btn btn-primary some-css-class" %>
</div>
